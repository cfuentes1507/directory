<odoo>
  <data>
    <!-- views/res_partner_views.xml -->
    <!-- 1. Vista de Búsqueda Extendida -->
    <record id="view_res_partner_filter_directorio" model="ir.ui.view">
        <field name="name">res.partner.search.directorio</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <!-- Búsqueda Rápida por número de teléfono adicional -->
                <field name="phone_ids" string="Teléfono" filter_domain="[('phone_ids.numero', 'ilike', self)]"/>
            </xpath>
        </field>
    </record>
    
    <!-- 2. Vista de Lista (Tree) Extendida -->
    <record id="view_partner_tree_directorio" model="ir.ui.view">
        <field name="name">res.partner.tree.directorio</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <!-- Añadimos la ubicación y las etiquetas a la lista -->
            <xpath expr="//field[@name='email']" position="after">
                <field name="category_id" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <!-- 3. Vista de Formulario (Form) Extendida -->
    <record id="view_partner_form_directorio" model="ir.ui.view">
        <field name="name">res.partner.form.directorio</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Añadimos una nueva pestaña para los teléfonos adicionales -->
            <xpath expr="//page[@name='internal_notes']" position="before">
                <page string="Teléfonos" name="telefonos_adicionales">
                    <field name="phone_ids">
                        <tree editable="bottom">
                            <field name="numero"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
  </data>
</odoo>