<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="module_category_directorio" model="ir.module.category">
            <field name="name">Directorio</field>
            <field name="description">Permisos para el m√≥dulo de Directorio.</field>
            <field name="sequence">100</field>
        </record>

        <record id="group_directorio_user" model="res.groups">
            <field name="name">Directorio / Usuario</field>
            <field name="category_id" ref="module_category_directorio"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_directorio_supervisor" model="res.groups">
            <field name="name">Directorio / Supervisor</field>
            <field name="category_id" ref="module_category_directorio"/>
            <field name="implied_ids" eval="[(4, ref('group_directorio_user'))]"/>
        </record>

        <record id="group_directorio_manager" model="res.groups">
            <field name="name">Directorio / Administrador</field>
            <field name="category_id" ref="module_category_directorio"/>
            <!-- Los administradores heredan los permisos del supervisor -->
            <field name="implied_ids" eval="[(4, ref('group_directorio_supervisor'))]"/>
        </record>

    </data>
</odoo>
